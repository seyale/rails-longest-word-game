<h1>Actions#new</h1>
<p>Find me in app/views/actions/new.html.erb</p>

<%= @letters.join(" ") %>

<form action="/score" method="post">
  <p>Whats the longest word you can find?</p>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" type="hidden" value="<%= @letters %>" />
  <input type="text" name="new" placeholder="your word">
  <input type="submit" value="Play">
</form>

